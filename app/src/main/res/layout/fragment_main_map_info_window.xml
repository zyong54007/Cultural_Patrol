    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">


        <TextView
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_844949"
            android:padding="@dimen/dp_13"
            android:text="文物名称"
            android:textColor="@color/color_ffffff" />

        <TextView
            android:id="@+id/info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_7"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_7"
            android:text="X"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_22" />

        <ImageView
            android:id="@+id/info_iv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@+id/info_close"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/default_iv" />

        <TextView
            android:id="@+id/grade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_iv"
            android:layout_toRightOf="@+id/info_iv"
            android:text="保护等级 ："
            android:textSize="@dimen/size_16" />


        <TextView
            android:id="@+id/info_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_iv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/grade_title"
            android:text="国家级"
            android:textColor="@color/color_545160"
            android:textSize="@dimen/size_16" />


        <TextView
            android:id="@+id/type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grade_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/info_iv"
            android:text="风险类别 ："
            android:textSize="@dimen/size_16" />


        <TextView
            android:id="@+id/info_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grade_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/type_title"
            android:text="二类"
            android:textColor="@color/color_545160"
            android:textSize="@dimen/size_16" />


