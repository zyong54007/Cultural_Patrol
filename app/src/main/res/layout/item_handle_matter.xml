<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_handlee_matter_iv"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_100"
        android:layout_margin="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/default_iv" />

    <TextView
        android:id="@+id/item_handle_matter_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_handlee_matter_iv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/item_handlee_matter_iv"
        android:text="文物名称"
        android:textColor="@color/color_844949"
        android:textSize="@dimen/size_16" />


    <TextView
        android:id="@+id/item_handle_matter_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_handle_matter_tv_name"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@+id/item_handlee_matter_iv"
        android:text="巡检时间"
        android:textColor="@color/color_844949"
        android:textSize="@dimen/size_16" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_navig"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:text="待处理"
        android:textColor="@color/color_ffffff" />

</RelativeLayout>
