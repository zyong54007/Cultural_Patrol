<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_search_treasures_iv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="#eeeeee" />


    <TextView
        android:id="@+id/item_search_treasures_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_search_treasures_iv"
        android:layout_toRightOf="@+id/item_search_treasures_iv"
        android:textColor="@color/color_844949"
        android:textSize="@dimen/size_16"
        tools:text="文物名称" />


    <TextView
        android:id="@+id/item_search_treasures_tv_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_treasures_tv_title"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/item_search_treasures_iv"
        android:layout_weight="1"
        android:textColor="@color/color_5a5263"
        tools:text="保护等级:国家级" />

    <TextView
        android:id="@+id/item_search_treasures_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_treasures_tv_title"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/item_search_treasures_tv_leave"
        android:layout_weight="1"
        android:textColor="@color/color_5a5263"
        android:textSize="@dimen/size_14"
        tools:text="风险类别:二类" />


    <TextView
        android:id="@+id/item_search_treasures_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_treasures_tv_leave"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/item_search_treasures_iv"
        android:drawableLeft="@mipmap/ww_address"
        android:drawablePadding="@dimen/dp_5"
        android:textColor="#5a5263"
        android:textSize="@dimen/size_14"
        tools:text="北京市海淀区" />


</RelativeLayout>