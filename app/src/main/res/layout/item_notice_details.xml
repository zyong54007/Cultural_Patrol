<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/enclosure_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/enclosure"
        android:textSize="@dimen/size_18" />

    <TextView
        android:id="@+id/enclosure_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/enclosure_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toLeftOf="@+id/enclosure_download"
        android:layout_toRightOf="@+id/enclosure_iv"
        android:text="附件名称" />


    <TextView
        android:id="@+id/enclosure_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="下载"
        android:textColor="@color/color_844949"
        android:textSize="@dimen/size_18" />

    <TextView
        android:id="@+id/item_noticedetails_catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/enclosure_iv"
        android:paddingBottom="@dimen/dp_15" />

    <Button
        android:id="@+id/item_notice_details_open"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_navig"
        android:text="打开"
        android:textColor="@color/color_ffffff" />


</RelativeLayout>
