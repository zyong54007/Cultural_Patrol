            android:drawableTop="@drawable/tab_icon_home"
            android:gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/shouye"
            android:textColor="@drawable/nav_item_color_state"
            android:textSize="@dimen/size_12" />

        <RadioButton
            android:id="@+id/main_market_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_location"
            android:gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/daohang"
            android:textColor="@drawable/nav_item_color_state"
            android:textSize="@dimen/size_12" />


        <RadioButton
            android:id="@+id/main_dapp_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_venue"
            android:gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/xunjian"
            android:textColor="@drawable/nav_item_color_state"
            android:textSize="@dimen/size_12" />


        <RadioButton
            android:id="@+id/main_dapp_tab_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_profile"
            android:gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/wodes"
            android:textColor="@drawable/nav_item_color_state"
            android:textSize="@dimen/size_12" />


    </RadioGroup>


