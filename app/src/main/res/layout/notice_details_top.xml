<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/notice_details_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="2018-12-12"
        android:textSize="@dimen/size_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/notice_details_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/xj_no_wc"
            android:visibility="gone" />


        <TextView
            android:id="@+id/notice_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/notice_details_iv"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/notice_details_iv"
            android:gravity="center"
            android:text="消息标题"
            android:textColor="@color/color_844949"
            android:textSize="@dimen/size_18" />


        <TextView
            android:id="@+id/notice_details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notice_details_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/notice_details_iv"
            android:text="消息标题"
            android:textSize="@dimen/size_16" />

    </RelativeLayout>
</LinearLayout>
